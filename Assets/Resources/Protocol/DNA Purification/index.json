{
  "$id": "1",
  "version": 9,
  "title": "DNA Purification",
  "pdfPath": "DNAPurification.pdf",
  "globalArElements": [],
  "steps": [
    {
      "$id": "20",
      "isCritical": false,
      "arElements": [
        {
          "$id": "21",
          "layout": {
            "$id": "22",
            "layoutType": "Vertical",
            "contentItems": [
              {
                "$id": "23",
                "textType": "Header",
                "text": "Phenol Extraction and Ethanol Precipitation of DNA",
                "fontsize": 7,
                "contentType": "Text"
              }
            ],
            "contentType": "Layout"
          },
          "arDefinitionType": "Container",
          "target": "",
          "Count": 1,
          "IsReadOnly": false
        }
      ],
      "checklist": [
        {
          "$id": "2",
          "Text": "Add an equal volume of phenol/chloroform/isoamyl alcohol to the DNA solution to be purified in a 1.5-ml microcentrifuge tube.",
          "activateTimer": false,
          "hours": 0,
          "minutes": 0,
          "seconds": 0,
          "CompletionTime": "0001-01-01T00:00:00",
          "IsChecked": {
            "$id": "3",
            "Value": false,
            "HasValue": true,
            "value": false
          },
          "arElements": [],
          "operations": []
        },
        {
          "$id": "4",
          "Text": "Vortex vigorously for 10 sec and microcentrifuge 15 sec at maximum speed, room temperature.",
          "activateTimer": false,
          "hours": 0,
          "minutes": 0,
          "seconds": 0,
          "CompletionTime": "0001-01-01T00:00:00",
          "IsChecked": {
            "$id": "5",
            "Value": false,
            "HasValue": true,
            "value": false
          },
          "arElements": [],
          "operations": []
        },
        {
          "$id": "6",
          "Text": "Carefully remove the top (aqueous) phase containing the DNA using a 200-\u00b5l pipettor and transfer to a new tube. If a white precipitate is present at the aqueous/organic interface, repeat steps 1 to 3.",
          "activateTimer": false,
          "hours": 0,
          "minutes": 0,
          "seconds": 0,
          "CompletionTime": "0001-01-01T00:00:00",
          "IsChecked": {
            "$id": "7",
            "Value": false,
            "HasValue": true,
            "value": false
          },
          "arElements": [],
          "operations": []
        },
        {
          "$id": "8",
          "Text": "Add 1/10 vol of 3 M sodium acetate, pH 5.2, to the solution of DNA. Mix by vortexing briefly or by flicking the tube several times with a finger.",
          "activateTimer": false,
          "hours": 0,
          "minutes": 0,
          "seconds": 0,
          "CompletionTime": "0001-01-01T00:00:00",
          "IsChecked": {
            "$id": "9",
            "Value": false,
            "HasValue": true,
            "value": false
          },
          "arElements": [],
          "operations": []
        },
        {
          "$id": "10",
          "Text": "Add 2 to 2.5 vol (calculated after salt addition) of ice-cold 100% ethanol. Mix by vortexing and place in crushed dry ice for 5 min or longer.",
          "activateTimer": false,
          "hours": 0,
          "minutes": 0,
          "seconds": 0,
          "CompletionTime": "0001-01-01T00:00:00",
          "IsChecked": {
            "$id": "11",
            "Value": false,
            "HasValue": true,
            "value": false
          },
          "arElements": [],
          "operations": []
        },
        {
          "$id": "12",
          "Text": "Microcentrifuge 5 min at maximum speed and remove the supernatant.",
          "activateTimer": false,
          "hours": 0,
          "minutes": 0,
          "seconds": 0,
          "CompletionTime": "0001-01-01T00:00:00",
          "IsChecked": {
            "$id": "13",
            "Value": false,
            "HasValue": true,
            "value": false
          },
          "arElements": [],
          "operations": []
        },
        {
          "$id": "14",
          "Text": "Add 1 ml room-temperature 70% ethanol. Invert the tube several times and microcentrifuge as in step 6.",
          "activateTimer": false,
          "hours": 0,
          "minutes": 0,
          "seconds": 0,
          "CompletionTime": "0001-01-01T00:00:00",
          "IsChecked": {
            "$id": "15",
            "Value": false,
            "HasValue": true,
            "value": false
          },
          "arElements": [],
          "operations": []
        },
        {
          "$id": "16",
          "Text": "Remove the supernatant as in step 6. Dry the pellet in a desiccator under vacuum or in a Speedvac evaporator.",
          "activateTimer": false,
          "hours": 0,
          "minutes": 0,
          "seconds": 0,
          "CompletionTime": "0001-01-01T00:00:00",
          "IsChecked": {
            "$id": "17",
            "Value": false,
            "HasValue": true,
            "value": false
          },
          "arElements": [],
          "operations": []
        },
        {
          "$id": "18",
          "Text": "Dissolve the dry pellet in an appropriate volume of water.",
          "activateTimer": false,
          "hours": 0,
          "minutes": 0,
          "seconds": 0,
          "CompletionTime": "0001-01-01T00:00:00",
          "IsChecked": {
            "$id": "19",
            "Value": false,
            "HasValue": true,
            "value": false
          },
          "arElements": [],
          "operations": []
        }
      ],
      "SignedOff": false
    },
    {
      "$id": "26",
      "isCritical": false,
      "arElements": [
        {
          "$id": "27",
          "layout": {
            "$id": "28",
            "layoutType": "Vertical",
            "contentItems": [
              {
                "$id": "29",
                "textType": "Header",
                "text": "Precipitation of DNA Using Isopropanol",
                "fontsize": 7,
                "contentType": "Text"
              }
            ],
            "contentType": "Layout"
          },
          "arDefinitionType": "Container",
          "target": "",
          "Count": 1,
          "IsReadOnly": false
        }
      ],
      "checklist": [
        {
          "$id": "24",
          "Text": "Use equal volumes of isopropanol and DNA solution in precipitation.",
          "activateTimer": false,
          "hours": 0,
          "minutes": 0,
          "seconds": 0,
          "CompletionTime": "0001-01-01T00:00:00",
          "IsChecked": {
            "$id": "25",
            "Value": false,
            "HasValue": true,
            "value": false
          },
          "arElements": [],
          "operations": []
        }
      ],
      "SignedOff": false
    },
    {
      "$id": "46",
      "isCritical": false,
      "arElements": [
        {
          "$id": "47",
          "layout": {
            "$id": "48",
            "layoutType": "Vertical",
            "contentItems": [
              {
                "$id": "49",
                "textType": "Header",
                "text": "Preparation of Buffered Phenol and Phenol/Chloroform/Isoamyl Alcohol",
                "fontsize": 7,
                "contentType": "Text"
              }
            ],
            "contentType": "Layout"
          },
          "arDefinitionType": "Container",
          "target": "",
          "Count": 1,
          "IsReadOnly": false
        }
      ],
      "checklist": [
        {
          "$id": "30",
          "Text": "Add 0.5 g of 8-hydroxyquinoline to a 2-liter glass beaker containing a stir bar.",
          "activateTimer": false,
          "hours": 0,
          "minutes": 0,
          "seconds": 0,
          "CompletionTime": "0001-01-01T00:00:00",
          "IsChecked": {
            "$id": "31",
            "Value": false,
            "HasValue": true,
            "value": false
          },
          "arElements": [],
          "operations": []
        },
        {
          "$id": "32",
          "Text": "Gently pour in 500 ml liquefied phenol or melted crystals of redistilled phenol (melted in a water bath at 65\u00b0C).",
          "activateTimer": false,
          "hours": 0,
          "minutes": 0,
          "seconds": 0,
          "CompletionTime": "0001-01-01T00:00:00",
          "IsChecked": {
            "$id": "33",
            "Value": false,
            "HasValue": true,
            "value": false
          },
          "arElements": [],
          "operations": []
        },
        {
          "$id": "34",
          "Text": "Add 500 ml of 50 mM Tris base.",
          "activateTimer": false,
          "hours": 0,
          "minutes": 0,
          "seconds": 0,
          "CompletionTime": "0001-01-01T00:00:00",
          "IsChecked": {
            "$id": "35",
            "Value": false,
            "HasValue": true,
            "value": false
          },
          "arElements": [],
          "operations": []
        },
        {
          "$id": "36",
          "Text": "Cover the beaker with aluminum foil. Stir 10 min at low speed with a magnetic stirrer at room temperature.",
          "activateTimer": false,
          "hours": 0,
          "minutes": 0,
          "seconds": 0,
          "CompletionTime": "0001-01-01T00:00:00",
          "IsChecked": {
            "$id": "37",
            "Value": false,
            "HasValue": true,
            "value": false
          },
          "arElements": [],
          "operations": []
        },
        {
          "$id": "38",
          "Text": "Let phases separate at room temperature. Gently decant the top (aqueous) phase into a suitable waste receptacle.",
          "activateTimer": false,
          "hours": 0,
          "minutes": 0,
          "seconds": 0,
          "CompletionTime": "0001-01-01T00:00:00",
          "IsChecked": {
            "$id": "39",
            "Value": false,
            "HasValue": true,
            "value": false
          },
          "arElements": [],
          "operations": []
        },
        {
          "$id": "40",
          "Text": "Add 500 ml of 50 mM Tris\u00b7Cl, pH 8.0. Repeat steps 4 to 6 so that two successive equilibrations with Tris\u00b7Cl are performed.",
          "activateTimer": false,
          "hours": 0,
          "minutes": 0,
          "seconds": 0,
          "CompletionTime": "0001-01-01T00:00:00",
          "IsChecked": {
            "$id": "41",
            "Value": false,
            "HasValue": true,
            "value": false
          },
          "arElements": [],
          "operations": []
        },
        {
          "$id": "42",
          "Text": "Add 250 ml of 50 mM Tris\u00b7Cl, pH 8.0, or TE buffer, pH 8.0, and store at 4\u00b0C in brown glass bottles or clear glass bottles wrapped in aluminum foil.",
          "activateTimer": false,
          "hours": 0,
          "minutes": 0,
          "seconds": 0,
          "CompletionTime": "0001-01-01T00:00:00",
          "IsChecked": {
            "$id": "43",
            "Value": false,
            "HasValue": true,
            "value": false
          },
          "arElements": [],
          "operations": []
        },
        {
          "$id": "44",
          "Text": "For use in DNA purification procedure, mix 25 vol phenol (bottom yellow phase of stored solution) with 24 vol chloroform and 1 vol isoamyl alcohol.",
          "activateTimer": false,
          "hours": 0,
          "minutes": 0,
          "seconds": 0,
          "CompletionTime": "0001-01-01T00:00:00",
          "IsChecked": {
            "$id": "45",
            "Value": false,
            "HasValue": true,
            "value": false
          },
          "arElements": [],
          "operations": []
        }
      ],
      "SignedOff": false
    },
    {
      "$id": "60",
      "isCritical": false,
      "arElements": [
        {
          "$id": "61",
          "layout": {
            "$id": "62",
            "layoutType": "Vertical",
            "contentItems": [
              {
                "$id": "63",
                "textType": "Header",
                "text": "Concentration of DNA Using Butanol",
                "fontsize": 7,
                "contentType": "Text"
              }
            ],
            "contentType": "Layout"
          },
          "arDefinitionType": "Container",
          "target": "",
          "Count": 1,
          "IsReadOnly": false
        }
      ],
      "checklist": [
        {
          "$id": "50",
          "Text": "Add an equal volume of sec-butanol to the sample and mix well by vortexing or by gentle inversion (if the DNA is of high molecular weight). Perform extraction in a polypropylene tube.",
          "activateTimer": false,
          "hours": 0,
          "minutes": 0,
          "seconds": 0,
          "CompletionTime": "0001-01-01T00:00:00",
          "IsChecked": {
            "$id": "51",
            "Value": false,
            "HasValue": true,
            "value": false
          },
          "arElements": [],
          "operations": []
        },
        {
          "$id": "52",
          "Text": "Centrifuge 5 min at 1200 \u00d7 g (2500 rpm), room temperature, or in a microcentrifuge for 10 sec at maximum speed.",
          "activateTimer": false,
          "hours": 0,
          "minutes": 0,
          "seconds": 0,
          "CompletionTime": "0001-01-01T00:00:00",
          "IsChecked": {
            "$id": "53",
            "Value": false,
            "HasValue": true,
            "value": false
          },
          "arElements": [],
          "operations": []
        },
        {
          "$id": "54",
          "Text": "Remove and discard the upper (sec-butanol) phase.",
          "activateTimer": false,
          "hours": 0,
          "minutes": 0,
          "seconds": 0,
          "CompletionTime": "0001-01-01T00:00:00",
          "IsChecked": {
            "$id": "55",
            "Value": false,
            "HasValue": true,
            "value": false
          },
          "arElements": [],
          "operations": []
        },
        {
          "$id": "56",
          "Text": "Repeat steps 1 to 3 until the desired volume of aqueous solution is obtained.",
          "activateTimer": false,
          "hours": 0,
          "minutes": 0,
          "seconds": 0,
          "CompletionTime": "0001-01-01T00:00:00",
          "IsChecked": {
            "$id": "57",
            "Value": false,
            "HasValue": true,
            "value": false
          },
          "arElements": [],
          "operations": []
        },
        {
          "$id": "58",
          "Text": "Extract the lower, aqueous phase with 25:24:1 phenol/chloroform/isoamyl alcohol and ethanol precipitate or remove sec-butanol by two ether extractions.",
          "activateTimer": false,
          "hours": 0,
          "minutes": 0,
          "seconds": 0,
          "CompletionTime": "0001-01-01T00:00:00",
          "IsChecked": {
            "$id": "59",
            "Value": false,
            "HasValue": true,
            "value": false
          },
          "arElements": [],
          "operations": []
        }
      ],
      "SignedOff": false
    },
    {
      "$id": "66",
      "isCritical": false,
      "arElements": [
        {
          "$id": "67",
          "layout": {
            "$id": "68",
            "layoutType": "Vertical",
            "contentItems": [
              {
                "$id": "69",
                "textType": "Header",
                "text": "Removal of Residual Phenol, Chloroform, or Butanol by Ether Extraction",
                "fontsize": 7,
                "contentType": "Text"
              }
            ],
            "contentType": "Layout"
          },
          "arDefinitionType": "Container",
          "target": "",
          "Count": 1,
          "IsReadOnly": false
        }
      ],
      "checklist": [
        {
          "$id": "64",
          "Text": "DNA solutions that have been purified by extraction with phenol and chloroform or concentrated with sec-butanol can often be used without ethanol precipitation for enzymatic manipulations if the organic solvents are removed by extraction with ether.",
          "activateTimer": false,
          "hours": 0,
          "minutes": 0,
          "seconds": 0,
          "CompletionTime": "0001-01-01T00:00:00",
          "IsChecked": {
            "$id": "65",
            "Value": false,
            "HasValue": true,
            "value": false
          },
          "arElements": [],
          "operations": []
        }
      ],
      "SignedOff": false
    },
    {
      "$id": "80",
      "isCritical": false,
      "arElements": [
        {
          "$id": "81",
          "layout": {
            "$id": "82",
            "layoutType": "Vertical",
            "contentItems": [
              {
                "$id": "83",
                "textType": "Header",
                "text": "DNA Purification Using Silica Membrane Spin Columns",
                "fontsize": 7,
                "contentType": "Text"
              }
            ],
            "contentType": "Layout"
          },
          "arDefinitionType": "Container",
          "target": "",
          "Count": 1,
          "IsReadOnly": false
        }
      ],
      "checklist": [
        {
          "$id": "70",
          "Text": "Prepare DNA solution, then purify DNA on silica membrane spin column.",
          "activateTimer": false,
          "hours": 0,
          "minutes": 0,
          "seconds": 0,
          "CompletionTime": "0001-01-01T00:00:00",
          "IsChecked": {
            "$id": "71",
            "Value": false,
            "HasValue": true,
            "value": false
          },
          "arElements": [],
          "operations": []
        },
        {
          "$id": "72",
          "Text": "Apply the supernatant to the silica membrane spin column.",
          "activateTimer": false,
          "hours": 0,
          "minutes": 0,
          "seconds": 0,
          "CompletionTime": "0001-01-01T00:00:00",
          "IsChecked": {
            "$id": "73",
            "Value": false,
            "HasValue": true,
            "value": false
          },
          "arElements": [],
          "operations": []
        },
        {
          "$id": "74",
          "Text": "Wash the spin column by adding 750 \u00b5l of wash buffer and microcentrifuging 1 min at maximum speed.",
          "activateTimer": false,
          "hours": 0,
          "minutes": 0,
          "seconds": 0,
          "CompletionTime": "0001-01-01T00:00:00",
          "IsChecked": {
            "$id": "75",
            "Value": false,
            "HasValue": true,
            "value": false
          },
          "arElements": [],
          "operations": []
        },
        {
          "$id": "76",
          "Text": "Transfer the spin column to a 1.5-ml microcentrifuge tube and add 75 to 100 \u00b5l nuclease-free water or TE buffer, pH 8.5, to the center of the membrane.",
          "activateTimer": false,
          "hours": 0,
          "minutes": 0,
          "seconds": 0,
          "CompletionTime": "0001-01-01T00:00:00",
          "IsChecked": {
            "$id": "77",
            "Value": false,
            "HasValue": true,
            "value": false
          },
          "arElements": [],
          "operations": []
        },
        {
          "$id": "78",
          "Text": "Collect DNA and store at 4\u00b0C until use.",
          "activateTimer": false,
          "hours": 0,
          "minutes": 0,
          "seconds": 0,
          "CompletionTime": "0001-01-01T00:00:00",
          "IsChecked": {
            "$id": "79",
            "Value": false,
            "HasValue": true,
            "value": false
          },
          "arElements": [],
          "operations": []
        }
      ],
      "SignedOff": false
    },
    {
      "$id": "88",
      "isCritical": false,
      "arElements": [
        {
          "$id": "89",
          "layout": {
            "$id": "90",
            "layoutType": "Vertical",
            "contentItems": [
              {
                "$id": "91",
                "textType": "Header",
                "text": "Purification and Concentration of RNA and Dilute Solutions of DNA",
                "fontsize": 7,
                "contentType": "Text"
              }
            ],
            "contentType": "Layout"
          },
          "arDefinitionType": "Container",
          "target": "",
          "Count": 1,
          "IsReadOnly": false
        }
      ],
      "checklist": [
        {
          "$id": "84",
          "Text": "The procedure is identical for purification of RNA, except that 2.5 vol ethanol should be used routinely for the precipitation.",
          "activateTimer": false,
          "hours": 0,
          "minutes": 0,
          "seconds": 0,
          "CompletionTime": "0001-01-01T00:00:00",
          "IsChecked": {
            "$id": "85",
            "Value": false,
            "HasValue": true,
            "value": false
          },
          "arElements": [],
          "operations": []
        },
        {
          "$id": "86",
          "Text": "When DNA solutions are dilute (<10 \u00b5g/ml) or when <1 \u00b5g of DNA is present, the ratio of ethanol to aqueous volume should be increased to 3:1 and the time on dry ice extended to 30 min.",
          "activateTimer": false,
          "hours": 0,
          "minutes": 0,
          "seconds": 0,
          "CompletionTime": "0001-01-01T00:00:00",
          "IsChecked": {
            "$id": "87",
            "Value": false,
            "HasValue": true,
            "value": false
          },
          "arElements": [],
          "operations": []
        }
      ],
      "SignedOff": false
    },
    {
      "$id": "102",
      "isCritical": false,
      "arElements": [
        {
          "$id": "103",
          "layout": {
            "$id": "104",
            "layoutType": "Vertical",
            "contentItems": [
              {
                "$id": "105",
                "textType": "Header",
                "text": "Removal of Low-Molecular-Weight Oligonucleotides and Triphosphates by Ethanol Precipitation",
                "fontsize": 7,
                "contentType": "Text"
              }
            ],
            "contentType": "Layout"
          },
          "arDefinitionType": "Container",
          "target": "",
          "Count": 1,
          "IsReadOnly": false
        }
      ],
      "checklist": [
        {
          "$id": "92",
          "Text": "Add an equal volume of 4 M ammonium acetate, pH 4.8, to the DNA solution and mix well.",
          "activateTimer": false,
          "hours": 0,
          "minutes": 0,
          "seconds": 0,
          "CompletionTime": "0001-01-01T00:00:00",
          "IsChecked": {
            "$id": "93",
            "Value": false,
            "HasValue": true,
            "value": false
          },
          "arElements": [],
          "operations": []
        },
        {
          "$id": "94",
          "Text": "Add 2 vol (calculated after salt addition) of ice-cold 100% ethanol. Vortex and set tube in crushed dry ice for 5 min.",
          "activateTimer": false,
          "hours": 0,
          "minutes": 0,
          "seconds": 0,
          "CompletionTime": "0001-01-01T00:00:00",
          "IsChecked": {
            "$id": "95",
            "Value": false,
            "HasValue": true,
            "value": false
          },
          "arElements": [],
          "operations": []
        },
        {
          "$id": "96",
          "Text": "Microcentrifuge 5 min at high speed, room temperature. Carefully remove supernatant and redissolve pellet in 100 \u00b5l TE buffer, pH 8.0.",
          "activateTimer": false,
          "hours": 0,
          "minutes": 0,
          "seconds": 0,
          "CompletionTime": "0001-01-01T00:00:00",
          "IsChecked": {
            "$id": "97",
            "Value": false,
            "HasValue": true,
            "value": false
          },
          "arElements": [],
          "operations": []
        },
        {
          "$id": "98",
          "Text": "Repeat steps 1 to 3.",
          "activateTimer": false,
          "hours": 0,
          "minutes": 0,
          "seconds": 0,
          "CompletionTime": "0001-01-01T00:00:00",
          "IsChecked": {
            "$id": "99",
            "Value": false,
            "HasValue": true,
            "value": false
          },
          "arElements": [],
          "operations": []
        },
        {
          "$id": "100",
          "Text": "Proceed with steps 7 to 9 in Basic Protocol.",
          "activateTimer": false,
          "hours": 0,
          "minutes": 0,
          "seconds": 0,
          "CompletionTime": "0001-01-01T00:00:00",
          "IsChecked": {
            "$id": "101",
            "Value": false,
            "HasValue": true,
            "value": false
          },
          "arElements": [],
          "operations": []
        }
      ],
      "SignedOff": false
    }
  ],
  "mediaBasePath": "Protocol/CP Pharmacology - 2007 - Moore - Purification and Concentration of DNA from Aqueous Solutions"
}
