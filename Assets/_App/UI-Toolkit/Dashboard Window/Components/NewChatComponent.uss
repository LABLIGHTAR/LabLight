.new-chat-container {
    padding: 20px;
    flex-grow: 1;
    flex-direction: column;
}

.title-label {
    margin-bottom: 20px;
}

.recipient-section {
    flex-direction: row;
    align-items: center;
    border-bottom-width: 1px;
    border-top-width: 1px;
    border-color: rgba(128, 128, 128, 0.5);
    padding: 5px 0;
    margin-bottom: 15px;
}

.recipient-label {
    margin-bottom: 5px;
    font-size: 16px;
    -unity-font-style: bold;
}

.message-text-field {
    min-height: 100px; /* Give more space for typing */
    flex-grow: 1; /* Allow it to take up available vertical space */
    -unity-text-align: upper-left;
    margin-bottom: 20px;
}

.recipient-badge {
    flex-direction: row;
    align-items: center;
    background-color: #3a75c4;
    border-radius: 12px;
    padding: 4px 8px;
    margin: 2px 5px 2px 0;
}

.recipient-badge-label {
    color: white;
    margin-right: 5px;
    font-size: 12px;
}

.recipient-badge-remove-button {
    width: 16px;
    height: 16px;
    -unity-background-image-tint-color: white;
}

.user-search-result-item {
    padding: 8px 12px;
    border-bottom-width: 1px;
    border-bottom-color: rgba(128, 128, 128, 0.2);
    cursor: pointer;
}

.user-search-result-item:hover {
    background-color: rgba(255, 255, 255, 0.05);
}

.recipients-scroll-view > .unity-scroll-view__content-container {
    flex-direction: row;
    flex-wrap: wrap;
}

.recipients-scroll-view {
    min-height: 40px;
    margin-bottom: 15px;
} 